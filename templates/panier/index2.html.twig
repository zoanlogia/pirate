

<body>
  <div id="w">
    <header id="title">
      <h1>Votre panier</h1>
    </header>
    <div id="page">
      <table id="cart">
        <thead>
          <tr>
            <th class="first">Photo</th>
            <th class="second">Quantit√©</th>
            <th class="third">Produit</th>
            <th class="fourth">Total</th>
            <th class="fifth">&nbsp;</th>
          </tr>
        </thead>
        <tbody>
          {% for item in items %}
          <tr class="productitm">
            
            <td><img src="{{ asset('img/') }}{{ item.produits.image }}"></td>
            <td><input href="{{ path('panier_subtract',{id: item.produits.id})}}" type="number" value="1" min="0" max="99" class="qtyinput"></td>
            <td>{{ item.produits.nom }}</td>
            td
            <td>{{ item.produits.prix }}</td>
            <td><span class="remove"><img src="https://i.imgur.com/h1ldGRr.png" alt="X"></span></td>
          </tr>
          
          <tr class="totalprice">
            <td class="light">Total:</td>
            <td colspan="2">&nbsp;</td>
            <td colspan="2"><span class="thick">{{ totalPrice }}</span></td>
          </tr>
          
         
          <tr class="checkoutrow">
            <td colspan="5" class="checkout"><button id="submitbtn">Payer maintenant</button></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</body>


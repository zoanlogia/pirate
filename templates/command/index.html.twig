<!--  extends 'base.html.twig' a remettre -->

<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}Welcome!
            {% endblock %}
        </title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://bootswatch.com/4/litera/bootstrap.min.css">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css" integrity="sha256-+N4/V/SbAFiW1MPBCXnfnP9QSN3+Keu+NlB+0ev/YKQ=" crossorigin="anonymous"/>
        {% endblock %}
    </head>

{% block body %}

    <div>
        <h1>Valider votre commande</h1>
    </div>
    
    
    <!-- si le panier n'est pas vide (verification de la taille de items)  -->
    
    
        <table class="table">
            <thead>
                <tr>
                    <th>Produit</th>
                    <th>Prix</th>
                    <th>Quantit√©</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% for commands in command %}
                        <tr>
                            <td>{{ commands.nom }}</td>  
                            <td>{{ commands.prix }}</td>
                            <td>{{ commands.quantity }}</td>
                            <td>{{ commands.prix * commands.quantity }}</td>
                        </tr>
            {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3">Total : </td>
                    <td>{{ totalPrice }}</td>
                    <td></td>
                </tr>
            </tfoot>
        </table>
        

{% endblock %}

</html>